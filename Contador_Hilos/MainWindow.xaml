        xmlns:local="clr-namespace:Contador_Hilos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" x:Name="TextAutomatico" Margin="140,120,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" x:Name="TextManual" Margin="580,120,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Button Content="Iniciar Automático" x:Name="ButtonAutomatico" HorizontalAlignment="Left" Margin="115,30,0,0" VerticalAlignment="Top" Width="75" Click="ButtonAutomatico_Click"/>
        <Button Content="Aumentar" x:Name="ButtonManual" HorizontalAlignment="Left" Margin="570,35,0,0" VerticalAlignment="Top" Width="75" Click="ButtonManual_Click"/>

    </Grid>
</Window>
